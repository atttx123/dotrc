alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias rm='rm -i'
alias cp='cp -ir'
alias mv='mv -i'
alias scp='scp -r'
alias df='df -h'
alias less='less -r'

alias gcat='iconv -f gb2312 -t utf8'
alias ucat='iconv -f utf8 -t gb2312'
alias getsite='wget -r -k -p -np -U NoSuchBrowser/1.0'

alias cls='clear'